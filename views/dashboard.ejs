<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Panel de Control - WhatsApp Bots</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    .team-member-card {
      background: var(--bg-color);
      border: 1px solid var(--border-color);
      border-radius: 8px;
      padding: 1rem;
      margin-bottom: 0.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .team-member-info {
      flex: 1;
    }

    .team-member-email {
      font-weight: 600;
      margin-bottom: 0.25rem;
    }

    .team-member-meta {
      font-size: 0.85rem;
      color: #888;
    }

    .team-member-actions {
      display: flex;
      gap: 0.5rem;
    }

    .badge {
      display: inline-block;
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      font-size: 0.75rem;
      font-weight: 600;
    }

    .badge-admin {
      background-color: rgba(255, 193, 7, 0.2);
      color: var(--status-pending);
    }

    .badge-vendor {
      background-color: rgba(13, 110, 253, 0.2);
      color: #0d6efd;
    }

    .badge-inactive {
      background-color: rgba(220, 53, 69, 0.2);
      color: #dc3545;
    }

    /* Estilos para Tabs del Modal */
    .modal-tabs {
        display: flex;
        gap: 1rem;
        border-bottom: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
    }

    .modal-tab {
        background: none;
        border: none;
        color: #888;
        padding: 0.5rem 1rem;
        cursor: pointer;
        font-weight: 500;
        border-bottom: 2px solid transparent;
        transition: all 0.2s;
    }

    .modal-tab:hover {
        color: var(--text-color);
    }

    .modal-tab.active {
        color: var(--primary-color);
        border-bottom-color: var(--primary-color);
    }

    .upload-section {
        background: rgba(255, 255, 255, 0.05);
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        border: 1px solid var(--border-color);
    }

    .image-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: var(--bg-color);
        padding: 0.75rem;
        margin-bottom: 0.5rem;
        border-radius: 6px;
        border: 1px solid var(--border-color);
    }

    .image-preview {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .image-thumb {
        width: 40px;
        height: 40px;
        object-fit: cover;
        border-radius: 4px;
        background: #000;
    }
  </style>
</head>

<body>
  <div class="container">
    <header>
      <h1>ü§ñ Gestor de Bots de WhatsApp</h1>
      <div class="user-info">
        <img src="<%= user.picture %>" alt="User" class="user-avatar">
        <span><%= user.displayName %></span>
        
        <!-- Mostrar rol -->
        <span style="background: #28a745; padding: 4px 8px; border-radius: 4px; font-size: 12px; margin-left: 8px;">
          <%= user.role === 'admin' ? 'üëë Admin' : 'üë§ Vendedor' %>
        </span>
        
        <a href="/sales" class="btn" style="background-color: var(--status-connected);">üíº Panel de Ventas</a>
        <a href="/auth/logout" class="btn btn-secondary">Cerrar Sesi√≥n</a>
      </div>
    </header>

    <main>
        <div id="bots-container"></div>
        <button id="create-bot-btn" class="btn">Ôºã Crear Nuevo Bot</button>
    </main>
  </div>

  <!-- Plantilla para una tarjeta de bot -->
  <template id="bot-card-template">
    <div class="bot-card" data-bot-id="">
      <button class="btn-close" title="Eliminar Bot">&times;</button>
      <button class="btn-settings" title="Configuraci√≥n">‚öôÔ∏è</button>
      <div class="bot-header">
        <h2 class="bot-name"></h2>
        <div class="bot-status">
          <span class="status-indicator"></span>
          <span class="status-text"></span>
        </div>
      </div>
      <div class="bot-body">
        <div class="bot-info">
          <p><strong>ID:</strong> <span class="bot-id"></span></p>
          <p><strong>Puerto:</strong> <span class="bot-port"></span></p>
        </div>
        <div class="qr-container">
          <img src="" alt="QR Code" class="qr-code">
          <div class="connected-icon">‚úÖ</div>
        </div>
      </div>
      <div class="bot-actions">
        <button class="btn btn-small btn-edit" title="Editar Prompt">‚úèÔ∏è Editar</button>
        <button class="btn btn-small btn-toggle"></button>
      </div>
    </div>
  </template>

  <!-- Modal para crear un nuevo bot -->
  <div id="create-modal-backdrop" class="modal-backdrop">
    <div id="create-bot-modal" class="modal">
        <form id="create-bot-form">
          <h2>Crear Nuevo Bot</h2>
          <div class="form-group"><label for="bot-name">Nombre del Bot</label><input type="text" id="bot-name" name="name" placeholder="Ej: Asistente de Ventas" required></div>
          <div class="form-group"><label for="bot-id">ID √önico del Bot</label><input type="text" id="bot-id" name="id" placeholder="Ej: ventas-mx" required pattern="[a-zA-Z0-9-]+"><small>Solo letras, n√∫meros y guiones.</small></div>
          <div class="form-group"><label for="bot-prompt">Prompt del Sistema (IA)</label><textarea id="bot-prompt" name="prompt" rows="8" placeholder="Eres un asistente virtual amable y profesional..." required></textarea></div>
          <div class="form-actions"><button type="button" id="create-cancel-btn" class="btn btn-secondary">Cancelar</button><button type="submit" class="btn">Guardar y Lanzar Bot</button></div>
        </form>
    </div>
  </div>

  <!-- Modal para editar el prompt de un bot -->
  <div id="edit-modal-backdrop" class="modal-backdrop">
    <div id="edit-bot-modal" class="modal">
        <form id="edit-bot-form">
          <h2>Editar Prompt del Bot</h2>
          <p><strong>Bot ID:</strong> <span id="edit-bot-id-display"></span></p>
          <div class="form-group"><label for="edit-bot-prompt">Prompt del Sistema (IA)</label><textarea id="edit-bot-prompt" name="prompt" required></textarea></div>
          <div class="form-actions"><button type="button" id="edit-cancel-btn" class="btn btn-secondary">Cancelar</button><button type="submit" class="btn">Guardar Cambios</button></div>
        </form>
    </div>
  </div>

  <!-- Modal de Configuraci√≥n de Funcionalidades -->
  <div id="settings-modal-backdrop" class="settings-modal-backdrop">
    <div id="settings-modal" class="settings-modal">
      <h2>‚öôÔ∏è Configuraci√≥n del Bot</h2>
      <p style="color: #888; margin-bottom: 1rem;">Bot ID: <strong id="settings-bot-id"></strong></p>

      <!-- TABS -->
      <div class="modal-tabs">
          <button class="modal-tab active" onclick="switchSettingsTab('features')">Funcionalidades</button>
          <button class="modal-tab" onclick="switchSettingsTab('images')">Im√°genes</button>
      </div>

      <!-- TAB: FUNCIONALIDADES -->
      <div id="tab-features">
          <div class="settings-section">
            <div class="setting-item">
              <div class="setting-info">
                <div class="setting-title">‚è∞ Agendamiento</div>
                <div class="setting-description">Programar habilitaci√≥n/deshabilitaci√≥n del bot</div>
              </div>
              <label class="toggle-switch">
                <input type="checkbox" id="feature-scheduling">
                <span class="toggle-slider"></span>
              </label>
            </div>

            <div class="setting-item">
              <div class="setting-info">
                <div class="setting-title">
                  ü§ñ Respuestas Autom√°ticas
                </div>
                <div class="setting-description">El bot responde autom√°ticamente a los mensajes</div>
              </div>
              <label class="toggle-switch">
                <input type="checkbox" id="feature-autoresponse">
                <span class="toggle-slider"></span>
              </label>
            </div>

            <div class="setting-item">
              <div class="setting-info">
                <div class="setting-title">
                  üìã Captura de Leads
                </div>
                <div class="setting-description">Extrae autom√°ticamente informaci√≥n de contacto</div>
              </div>
              <label class="toggle-switch">
                <input type="checkbox" id="feature-leadcapture">
                <span class="toggle-slider"></span>
              </label>
            </div>

            <div class="setting-item">
              <div class="setting-info">
                <div class="setting-title">
                  üïê Horario de Trabajo
                </div>
                <div class="setting-description">Bot activo solo en horarios espec√≠ficos</div>
              </div>
              <label class="toggle-switch">
                <input type="checkbox" id="feature-workinghours">
                <span class="toggle-slider"></span>
              </label>
            </div>
          </div>
      </div>

      <!-- TAB: IM√ÅGENES -->
      <div id="tab-images" style="display: none;">
          <div class="upload-section">
              <h4 style="margin-top:0; margin-bottom: 10px;">Subir Nueva Imagen</h4>
              <form id="upload-image-form" style="display: flex; gap: 1rem; flex-direction: column;">
                  <div class="form-group" style="margin:0;">
                      <label style="font-size: 0.85rem; color: #aaa;">Palabra clave (ej: menu, ubicacion)</label>
                      <input type="text" id="img-keyword" placeholder="Palabra clave" required style="width: 100%; padding: 8px; background: #333; border: 1px solid #555; color: #fff; border-radius: 4px;">
                  </div>
                  <div class="form-group" style="margin:0;">
                      <label style="font-size: 0.85rem; color: #aaa;">Archivo de Imagen</label>
                      <input type="file" id="img-file" accept="image/*" required style="color: #ccc;">
                  </div>
                  <button type="submit" class="btn btn-small">‚¨ÜÔ∏è Subir y Guardar</button>
              </form>
          </div>
          
          <h4 style="margin-bottom: 10px;">Im√°genes Activas</h4>
          <div id="images-list" style="max-height: 250px; overflow-y: auto; padding-right: 5px;">
              <!-- Lista de im√°genes -->
          </div>
      </div>

      <div class="settings-actions" style="margin-top: 1.5rem;">
        <button type="button" id="settings-cancel-btn" class="btn btn-secondary">Cerrar</button>
        <button type="button" id="settings-save-btn" class="btn">Guardar Cambios (Funcionalidades)</button>
      </div>
    </div>
  </div>

  <!-- Modal de Equipo -->
  <div id="team-modal-backdrop" class="modal-backdrop">
    <div id="team-modal" class="modal" style="max-width: 800px;">
      <h2>üë• Gesti√≥n de Equipo</h2>
      
      <div style="margin-bottom: 2rem;">
        <h3>Agregar Nuevo Miembro</h3>
        <form id="add-team-member-form" style="display: flex; gap: 1rem; align-items: end;">
          <div class="form-group" style="flex: 1;">
            <label for="member-email">Email</label>
            <input type="email" id="member-email" placeholder="usuario@ejemplo.com" required>
          </div>
          <div class="form-group" style="width: 150px;">
            <label for="member-role">Rol</label>
            <select id="member-role" required>
              <option value="vendor">Vendedor</option>
              <option value="admin">Admin</option>
            </select>
          </div>
          <button type="submit" class="btn">Agregar</button>
        </form>
      </div>

      <div>
        <h3>Miembros del Equipo</h3>
        <div id="team-members-list"></div>
      </div>

      <div class="form-actions" style="margin-top: 2rem;">
        <button type="button" id="team-close-btn" class="btn btn-secondary">Cerrar</button>
      </div>
    </div>
  </div>

  <script>
    const currentUserEmail = '<%= user.email %>';
    console.log('üë§ Usuario actual:', currentUserEmail);

    // --- Referencias a elementos del DOM ---
    const botsContainer = document.getElementById('bots-container');
    const botCardTemplate = document.getElementById('bot-card-template');
    
    // Modal de Creaci√≥n
    const createModalBackdrop = document.getElementById('create-modal-backdrop');
    const createBotBtn = document.getElementById('create-bot-btn');
    const createCancelBtn = document.getElementById('create-cancel-btn');
    const createBotForm = document.getElementById('create-bot-form');

    // Modal de Edici√≥n
    const editModalBackdrop = document.getElementById('edit-modal-backdrop');
    const editBotForm = document.getElementById('edit-bot-form');
    const editCancelBtn = document.getElementById('edit-cancel-btn');
    const editBotPromptTextarea = document.getElementById('edit-bot-prompt');
    const editBotIdDisplay = document.getElementById('edit-bot-id-display');

    // Modal de Configuraci√≥n
    const settingsModalBackdrop = document.getElementById('settings-modal-backdrop');
    const settingsCancelBtn = document.getElementById('settings-cancel-btn');
    const settingsSaveBtn = document.getElementById('settings-save-btn');
    const settingsBotIdDisplay = document.getElementById('settings-bot-id');

    let currentSettingsBotId = null;

    // --- L√≥gica de Modales ---
    createBotBtn.addEventListener('click', () => createModalBackdrop.style.display = 'flex');
    createCancelBtn.addEventListener('click', () => createModalBackdrop.style.display = 'none');
    createModalBackdrop.addEventListener('click', (e) => { if (e.target === createModalBackdrop) createModalBackdrop.style.display = 'none'; });

    editCancelBtn.addEventListener('click', () => editModalBackdrop.style.display = 'none');
    editModalBackdrop.addEventListener('click', (e) => { if (e.target === editModalBackdrop) editModalBackdrop.style.display = 'none'; });

    settingsCancelBtn.addEventListener('click', () => settingsModalBackdrop.style.display = 'none');
    settingsModalBackdrop.addEventListener('click', (e) => { if (e.target === settingsModalBackdrop) settingsModalBackdrop.style.display = 'none'; });

    settingsSaveBtn.addEventListener('click', saveBotFeatures);

    function showEditModal(botId, currentPrompt) {
        editBotIdDisplay.textContent = botId;
        editBotPromptTextarea.value = currentPrompt;
        editBotForm.dataset.botId = botId;
        editModalBackdrop.style.display = 'flex';
    }

    async function showSettingsModal(botId) {
        currentSettingsBotId = botId;
        settingsBotIdDisplay.textContent = botId;
        
        // Resetear tabs
        switchSettingsTab('features');
        
        try {
            const response = await fetch(`/api/bot/${botId}/features`);
            const features = await response.json();
            
            document.getElementById('feature-scheduling').checked = features.scheduling_enabled === true || features.scheduling_enabled === 1;
            document.getElementById('feature-autoresponse').checked = features.auto_response_enabled === true || features.auto_response_enabled === 1;
            document.getElementById('feature-leadcapture').checked = features.lead_capture_enabled === true || features.lead_capture_enabled === 1;
            document.getElementById('feature-workinghours').checked = features.working_hours_enabled === true || features.working_hours_enabled === 1;
            
            settingsModalBackdrop.style.display = 'flex';
        } catch (error) {
            console.error(error);
            alert('Error cargando configuraci√≥n');
        }
    }

    // --- NUEVO: L√≥gica de Tabs y Gesti√≥n de Im√°genes ---

    function switchSettingsTab(tab) {
        // Actualizar botones
        document.querySelectorAll('.modal-tab').forEach(t => t.classList.remove('active'));
        const activeButton = Array.from(document.querySelectorAll('.modal-tab')).find(b => b.getAttribute('onclick').includes(tab));
        if(activeButton) activeButton.classList.add('active');
        
        // Mostrar contenido
        if (tab === 'features') {
            document.getElementById('tab-features').style.display = 'block';
            document.getElementById('tab-images').style.display = 'none';
            settingsSaveBtn.style.display = 'block';
        } else {
            document.getElementById('tab-features').style.display = 'none';
            document.getElementById('tab-images').style.display = 'block';
            settingsSaveBtn.style.display = 'none'; // Ocultar bot√≥n guardar general, ya que las im√°genes se suben individualmente
            loadBotImages(currentSettingsBotId);
        }
    }

    async function loadBotImages(botId) {
        const container = document.getElementById('images-list');
        container.innerHTML = '<p style="color:#888; text-align:center;">Cargando im√°genes...</p>';
        
        try {
            const res = await fetch(`/api/bot/${botId}/images`);
            const images = await res.json();
            
            if (images.length === 0) {
                container.innerHTML = '<p style="color: #888; text-align:center; padding: 1rem;">No hay im√°genes configuradas.</p>';
                return;
            }
            
            container.innerHTML = images.map(img => `
                <div class="image-item">
                    <div class="image-preview">
                        <img src="/uploads/${img.filename}" class="image-thumb" alt="thumb">
                        <div>
                            <div style="font-weight: bold; color: #fff;">${img.keyword}</div>
                            <div style="font-size: 0.8rem; color: #aaa;">${img.original_name}</div>
                        </div>
                    </div>
                    <button onclick="deleteImage(${img.id})" class="btn btn-small btn-danger" title="Eliminar">üóëÔ∏è</button>
                </div>
            `).join('');
        } catch (err) {
            console.error(err);
            container.innerHTML = '<p style="color:red;">Error cargando im√°genes</p>';
        }
    }

    // Subir imagen
    document.getElementById('upload-image-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const submitBtn = e.target.querySelector('button[type="submit"]');
        submitBtn.disabled = true;
        submitBtn.textContent = 'Subiendo...';

        const formData = new FormData();
        formData.append('keyword', document.getElementById('img-keyword').value);
        formData.append('image', document.getElementById('img-file').files[0]);

        try {
            const res = await fetch(`/api/bot/${currentSettingsBotId}/images`, {
                method: 'POST',
                body: formData
            });
            
            if (res.ok) {
                document.getElementById('upload-image-form').reset();
                loadBotImages(currentSettingsBotId);
            } else {
                const err = await res.json();
                alert('Error subiendo imagen: ' + (err.message || 'Desconocido'));
            }
        } catch (err) {
            console.error(err);
            alert('Error de conexi√≥n');
        } finally {
            submitBtn.disabled = false;
            submitBtn.textContent = '‚¨ÜÔ∏è Subir y Guardar';
        }
    });

    async function deleteImage(id) {
        if(!confirm('¬øSeguro que deseas eliminar esta imagen? El bot ya no podr√° usarla.')) return;
        
        try {
            await fetch(`/api/images/${id}`, { method: 'DELETE' });
            loadBotImages(currentSettingsBotId);
        } catch (error) {
            console.error(error);
            alert('No se pudo eliminar la imagen');
        }
    }

    // --- Fin L√≥gica Im√°genes ---

    async function saveBotFeatures() {
        const features = {
            schedulingEnabled: document.getElementById('feature-scheduling').checked ? 1 : 0,
            autoResponseEnabled: document.getElementById('feature-autoresponse').checked ? 1 : 0,
            leadCaptureEnabled: document.getElementById('feature-leadcapture').checked ? 1 : 0,
            workingHoursEnabled: document.getElementById('feature-workinghours').checked ? 1 : 0
        };
        
        try {
            const response = await fetch(`/api/bot/${currentSettingsBotId}/features`, {
                method: 'PATCH',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(features)
            });
            
            const result = await response.json();
            if (response.ok) {
                alert('‚úÖ Configuraci√≥n guardada exitosamente');
                settingsModalBackdrop.style.display = 'none';
            } else {
                alert(`Error: ${result.message}`);
            }
        } catch (error) {
            alert('No se pudo guardar la configuraci√≥n');
        }
    }

    // --- L√≥gica de Formularios ---
    createBotForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const data = Object.fromEntries(new FormData(createBotForm).entries());
        try {
            const response = await fetch('/create-bot', { 
                method: 'POST', 
                headers: { 'Content-Type': 'application/json' }, 
                body: JSON.stringify(data) 
            });
            const result = await response.json();
            if (response.ok) { 
                createModalBackdrop.style.display = 'none'; 
                createBotForm.reset(); 
                console.log('‚úÖ Bot creado exitosamente');
            } else { 
                alert(`Error: ${result.message}`); 
            }
        } catch (error) { 
            alert('No se pudo crear el bot.'); 
        }
    });

    editBotForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const botId = e.currentTarget.dataset.botId;
        const newPrompt = editBotPromptTextarea.value;
        try {
            const response = await fetch(`/edit-bot/${botId}`, { 
                method: 'PATCH', 
                headers: { 'Content-Type': 'application/json' }, 
                body: JSON.stringify({ prompt: newPrompt }) 
            });
            const result = await response.json();
            if (response.ok) {
                const card = botsContainer.querySelector(`.bot-card[data-bot-id="${botId}"]`);
                if(card) card.dataset.prompt = newPrompt;
                editModalBackdrop.style.display = 'none';
                console.log('‚úÖ Prompt actualizado');
            } else { 
                alert(`Error: ${result.message}`); 
            }
        } catch (error) { 
            alert('No se pudieron guardar los cambios.'); 
        }
    });

    // --- L√≥gica de Acciones en Tarjetas ---
    botsContainer.addEventListener('click', async (e) => {
        const button = e.target.closest('button');
        if (!button) return;
        const card = button.closest('.bot-card');
        if (!card) return;
        const botId = card.dataset.botId;

        if (button.classList.contains('btn-settings')) {
            showSettingsModal(botId);
        } else if (button.classList.contains('btn-toggle')) {
            const action = button.dataset.action;
            const endpoint = action === 'disable' ? `/disable-bot/${botId}` : `/enable-bot/${botId}`;
            button.disabled = true;
            try { 
                await fetch(endpoint, { method: 'POST' }); 
            } catch (error) { 
                console.error(`Error al ${action} bot:`, error); 
            }
        } else if (button.classList.contains('btn-close')) {
            const botName = card.querySelector('.bot-name').textContent;
            if (confirm(`¬øSeguro que quieres eliminar el bot "${botName}"?\nEsta acci√≥n es irreversible.`)) {
                try { 
                    await fetch(`/delete-bot/${botId}`, { method: 'DELETE' }); 
                } catch (error) { 
                    alert('No se pudo eliminar el bot.'); 
                }
            }
        } else if (button.classList.contains('btn-edit')) {
            const currentPrompt = card.dataset.prompt || '';
            showEditModal(botId, currentPrompt);
        }
    });

    // --- L√≥gica de WebSocket y renderizado ---
    const socket = new WebSocket(`${window.location.protocol === 'https:' ? 'wss:' : 'ws:'}//${window.location.host}`);
    
    socket.onopen = () => {
        console.log('‚úÖ WebSocket conectado');
    };
    
    socket.onmessage = (event) => {
        const message = JSON.parse(event.data);
        
        const handler = {
            'INIT': (data) => {
                console.log(`üîÑ Inicializando dashboard con ${data.length} bots`);
                data.forEach((bot) => addOrUpdateBotCard(bot));
            },
            'NEW_BOT': (data) => addOrUpdateBotCard(data),
            'UPDATE_BOT': (data) => addOrUpdateBotCard(data),
            'BOT_DELETED': (data) => {
                const cardToRemove = botsContainer.querySelector(`.bot-card[data-bot-id="${data.id}"]`);
                if (cardToRemove) cardToRemove.remove();
            }
        }[message.type];
        
        if (handler) handler(message.data);
    };
    
    socket.onerror = (error) => console.error('‚ùå Error en WebSocket:', error);
    socket.onclose = () => console.log('‚ùå WebSocket desconectado');

    function addOrUpdateBotCard(botData) {
        if (botData.ownerEmail !== currentUserEmail) return;

        let card = botsContainer.querySelector(`.bot-card[data-bot-id="${botData.id}"]`);
        
        if (!card) {
            card = botCardTemplate.content.cloneNode(true).firstElementChild;
            botsContainer.appendChild(card);
        }
        
        card.dataset.botId = botData.id;
        card.dataset.prompt = botData.prompt;
        card.querySelector('.bot-name').textContent = botData.name;
        card.querySelector('.bot-id').textContent = botData.id;
        card.querySelector('.bot-port').textContent = botData.port;
        
        const statusText = card.querySelector('.status-text');
        const qrImage = card.querySelector('.qr-code');
        const connectedIcon = card.querySelector('.connected-icon');
        const toggleBtn = card.querySelector('.btn-toggle');
        
        card.className = 'bot-card';
        qrImage.style.display = 'none';
        connectedIcon.style.display = 'none';
        toggleBtn.disabled = false;

        if (botData.status === 'enabled') {
            toggleBtn.textContent = 'Deshabilitar';
            toggleBtn.className = 'btn btn-small btn-toggle btn-danger';
            toggleBtn.dataset.action = 'disable';
        } else {
            toggleBtn.textContent = 'Habilitar';
            toggleBtn.className = 'btn btn-small btn-toggle btn-success';
            toggleBtn.dataset.action = 'enable';
        }

        switch (botData.runtimeStatus) {
            case 'CONNECTED': 
                card.classList.add('status-connected'); 
                statusText.textContent = 'Conectado'; 
                connectedIcon.style.display = 'block'; 
                break;
            case 'PENDING_QR': 
                card.classList.add('status-pending'); 
                statusText.textContent = 'Esperando QR'; 
                qrImage.src = botData.qr; 
                qrImage.style.display = 'block'; 
                break;
            case 'DISCONNECTED': 
                card.classList.add('status-disconnected'); 
                statusText.textContent = 'Desconectado'; 
                break;
            case 'DISABLED': 
                card.classList.add('status-disabled'); 
                statusText.textContent = 'Deshabilitado'; 
                break;
            default: 
                card.classList.add('status-starting'); 
                statusText.textContent = 'Iniciando...'; 
                break;
        }
    }

    // === GESTI√ìN DE EQUIPO ===
    const teamModalBackdrop = document.getElementById('team-modal-backdrop');
    const teamCloseBtn = document.getElementById('team-close-btn');
    const addTeamMemberForm = document.getElementById('add-team-member-form');

    // Crear bot√≥n para abrir gesti√≥n de equipo en el header
    const teamManagementBtn = document.createElement('button');
    teamManagementBtn.className = 'btn';
    teamManagementBtn.style.cssText = 'background-color: #0d6efd; margin-left: 0.5rem;';
    teamManagementBtn.innerHTML = 'üë• Gestionar Equipo';
    teamManagementBtn.addEventListener('click', openTeamManagement);

    // Agregar el bot√≥n al header (despu√©s del bot√≥n de Panel de Ventas)
    const salesBtn = document.querySelector('a[href="/sales"]');
    if (salesBtn) {
        salesBtn.parentNode.insertBefore(teamManagementBtn, salesBtn.nextSibling);
    }

    teamCloseBtn.addEventListener('click', () => teamModalBackdrop.style.display = 'none');
    teamModalBackdrop.addEventListener('click', (e) => {
        if (e.target === teamModalBackdrop) teamModalBackdrop.style.display = 'none';
    });

    addTeamMemberForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const email = document.getElementById('member-email').value;
        const role = document.getElementById('member-role').value;
        
        try {
            const response = await fetch('/api/team', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email, role })
            });
            
            const result = await response.json();
            
            if (response.ok) {
                alert(`‚úÖ Usuario ${email} agregado exitosamente`);
                addTeamMemberForm.reset();
                loadTeamMembers();
            } else {
                alert(`‚ùå Error: ${result.message}`);
            }
        } catch (error) {
            alert('Error agregando usuario');
            console.error(error);
        }
    });

    async function openTeamManagement() {
        teamModalBackdrop.style.display = 'flex';
        await loadTeamMembers();
    }

    async function loadTeamMembers() {
        try {
            const response = await fetch('/api/team');
            const members = await response.json();
            
            const container = document.getElementById('team-members-list');
            
            if (members.length === 0) {
                container.innerHTML = '<p style="text-align: center; color: #666; padding: 2rem;">No hay miembros en el equipo</p>';
                return;
            }
            
            container.innerHTML = members.map(member => `
                <div class="team-member-card">
                    <div class="team-member-info">
                        <div class="team-member-email">${member.email}</div>
                        <div class="team-member-meta">
                            <span class="badge badge-${member.role}">${member.role === 'admin' ? 'üëë Admin' : 'üë§ Vendedor'}</span>
                            ${!member.is_active ? '<span class="badge badge-inactive">Inactivo</span>' : ''}
                            <span style="margin-left: 0.5rem;">Agregado: ${new Date(member.created_at).toLocaleDateString()}</span>
                        </div>
                    </div>
                    <div class="team-member-actions">
                        <button class="btn btn-small ${member.is_active ? 'btn-secondary' : 'btn-success'}" 
                                onclick="toggleMemberStatus(${member.id})">
                            ${member.is_active ? '‚è∏Ô∏è Desactivar' : '‚ñ∂Ô∏è Activar'}
                        </button>
                        <button class="btn btn-small btn-danger" 
                                onclick="removeMember(${member.id}, '${member.email}')">
                            üóëÔ∏è Eliminar
                        </button>
                    </div>
                </div>
            `).join('');
        } catch (error) {
            console.error('Error cargando equipo:', error);
        }
    }

    async function toggleMemberStatus(userId) {
        try {
            const response = await fetch(`/api/team/${userId}/toggle`, { method: 'PATCH' });
            const result = await response.json();
            if (response.ok) {
                alert(`‚úÖ ${result.message}`);
                await loadTeamMembers();
            } else {
                alert(`‚ùå Error: ${result.message}`);
            }
        } catch (error) {
            alert('Error cambiando estado del usuario');
        }
    }

    async function removeMember(userId, email) {
        if (!confirm(`¬øSeguro que quieres eliminar a ${email}?\nEsta acci√≥n es irreversible.`)) return;
        
        try {
            const response = await fetch(`/api/team/${userId}`, { method: 'DELETE' });
            if (response.ok) {
                alert('‚úÖ Usuario eliminado exitosamente');
                await loadTeamMembers();
            } else {
                const result = await response.json();
                alert(`‚ùå Error: ${result.message}`);
            }
        } catch (error) {
            alert('Error eliminando usuario');
        }
    }
  </script>
